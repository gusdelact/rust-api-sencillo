const AWS = require('aws-sdk');
const docClient = new AWS.DynamoDB.DocumentClient({region: 'us-east-1'});


exports.handler = (event, context, callback) => {
    
    let scanParameters = {
       TableName : 'guestbook',
       Limit : 100,
    };
    
    docClient.scan( scanParameters, function(err,data) {
            if (err) {
                callback(err, null);
            } else {
                callback(null, data);
            }
        });
    
};
